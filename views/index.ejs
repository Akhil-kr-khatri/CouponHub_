<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coupon Hub || Home</title>
    <link rel="stylesheet" href="/CSS/style.css">
    <!-- <link rel="stylesheet" href="/CSS/Event.css"> -->
</head>

<body>
    <!-- Include Header -->
    <%- include("header") %>

    <section class="search">
        <form action="/search">
            <input class="searchBar" placeholder="Search Any Coupon Name or Organization..." type="search" name="search">
            <button class="searchSubmit"><i class="sea fa-solid fa-magnifying-glass"></i></button>
        </form>
    </section>

    <!-- Collaboration Section -->
    <section class="bg-grey py-5">
        <div class="container text-center">
            <h2> We are Collaborated With <span class="text-primary">250+</span> Organizations</h2>
            <div class="collaboration justify-content-around align-items-center flex-wrap">
                <img src="/photos/dominos.png"alt="Dominos">
                <img src="/photos/swiggy.png" alt="Swiggy">
                <img src="/photos/zomato.jpg" alt="Zomato">
                <img src="/photos/dell.webp" alt="Dell">
                <img src="/photos/one8.jpg" alt="One8">
                <img src="/photos/croma.jpg" alt="Croma">
            </div>
        </div>
    </section>

    <!-- Top Deals -->
    <section class="topdeals">
        <h2 class="text-center py-5 m5">Top Deals Today</h2>
        <div class="card">
            <div class="cardno">
                <div class="card-image">
                    <img src="/photos/dominos.png" alt="Domino's">
                </div>
                <div class="card-header">Up to 60% OFF</div>
            </div>
            <div class="cardno">
                <div class="card-image">
                    <img src="/photos/croma.jpg" alt="Croma">
                </div>
                <div class="card-header">Up to 60% OFF</div>
            </div>
            <div class="cardno">
                <div class="card-image">
                    <img src="/photos/swiggy.png" alt="Swiggy">
                </div>
                <div class="card-header">Up to 60% OFF</div>
            </div>
            <div class="cardno">
                <div class="card-image">
                    <img src="/photos/zomato.jpg" alt="Zomato">
                </div>
                <div class="card-header">Up to 60% OFF</div>
            </div>
        </div>
    </section>

    <!-- Contribute Section -->
    <section class="contribute m5">
        <div class="heading text-center h2">
            <strong> Want to Contribute to Us?</strong>
        </div>
        <center>
            <form action="/addCoupon" method="POST" enctype="multipart/form-data">
                <div class="formImage">
                    <a href="/">
                        <img src="../image/logo.jpg" alt="Logo" width="200px">
                    </a>
                </div>
                <input type="text" name="code" placeholder="Enter The Code"> <br>
                <input type="text" name="org" placeholder="Organization Name"> <br>
                <input type="text" name="type" placeholder="Type of Coupon"> <br>
                <input type="text" name="title" placeholder="Coupon Title"> <br>
                <input type="number" name="price" placeholder="Coupon Price"> <br>

                <input placeholder="Expiration Date" class="textbox-n" name="edate" id="edate" type="text"
                    onfocus="(this.type='date')" onblur="(this.type='text')"> <br>

                <input type="file" name="photo"> <br>

                <textarea name="tc" id="tc" cols="30" rows="10" placeholder="Terms and Conditions"></textarea> <br>

                <input type="submit" value="Submit">
            </form>
        </center>
    </section>

    <!-- Include Footer -->
    <%- include("footer") %>
</body>
</html>
